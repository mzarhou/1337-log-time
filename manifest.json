{
    "name": "Extension Demo",
    "version": "1.0",
    "description": "Build an Basic Extension!",
    "permissions": ["activeTab"],
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "img/16.png",
        "32": "img/32.png",
        "48": "img/48.png",
        "96": "img/96.png"
      }
    },

    "content_scripts": [
        {
            "matches": ["*://*.42.fr/*"],
            "js": ["script.js"],
            "run_at": "document_idle"
        }
    ],

    "manifest_version": 2
  }
